#!/bin/bash
PREFIX=/opt
GCC=$PREFIX/cilkplus
LIB_PATH=$GCC/lib:$GCC/lib64:$GCC/libexec:$GCC/share
BIN_PATH=$GCC/bin


#use the cilk compiled gcc
export PATH=$BIN_PATH:$PATH

#export header path
export C_INCLUDE_PATH=$GCC/include:$C_INCLUDE_PATH
export CPLUS_INCLUDE_PATH=$GCC/include:$CPLUS_INCLUDE_PATH

#export library path
export LD_LIBRARY_PATH=$LIB_PATH:$LD_LIBRARY_PATH
export LIBRARY_PATH=$LIB_PATH:$LIBRARY_PATH
